---
import Layout from "../../layouts/Layout.astro";
import penguins from "../../assets/penguins.json";

// Générer automatiquement la liste des espèces
const species = [...new Set(penguins.map((p) => p.species))].filter((s) => s);
---

<Layout>
  <h1 class="text-3xl font-bold mb-8">🔄 Routes Dynamiques</h1>
  
  <p class="text-lg mb-8 text-base-content/70">
    Sélectionnez une espèce pour voir l'analyse détaillée :
  </p>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      species.map((speciesName) => (
        <a href={`/rendu-dynamique/${speciesName}`} class="card bg-base-100 shadow-lg hover:shadow-xl transition-all hover:scale-105">
          <div class="card-body items-center text-center">
            <h2 class="card-title text-2xl">🐧</h2>
            <h3 class="text-xl font-semibold">{speciesName}</h3>
            <div class="badge badge-primary mt-2">Dynamique</div>
          </div>
        </a>
      ))
    }
  </div>
</Layout>
